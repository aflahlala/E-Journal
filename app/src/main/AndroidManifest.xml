<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.jplas.e_journal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.TentangAplikasi" />
        <activity android:name=".activity.Rating" />
        <activity android:name=".activity.AlertEjournal" />
        <activity android:name=".activity.AlurAkses" />
        <activity
            android:name=".activity.FragmentPanduan"
            android:parentActivityName=".activity.FragmentHome" />
        <activity android:name=".activity.FragmentInformasi" />
        <activity android:name=".activity.FragmentHome" />
        <activity android:name=".activity.FragmentLayout" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>