<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kepala"
                android:scaleType="fitStart"></ImageView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/lgsatuu"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/logoputih"/>

                <ImageView
                    android:id="@+id/lgduaa"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/logo_um"
                    android:layout_marginLeft="60dp" />

                <TextView
                    android:id="@+id/tvhai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/madee"
                    android:text="Hai,"
                    android:textColor="@color/putih"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvselamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang !"
                    android:textSize="18sp"
                    android:textColor="@color/putih"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/madee"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menunya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginTop="150dp">

                <RelativeLayout
                    android:id="@+id/menu1"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/iv_menu1"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/menusatu" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu2"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/iv_menu2"
                        android:layout_width="150dp"
                        android:layout_height="180dp"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/menudua" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvvv"
                android:layout_below="@id/menunya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Buat Kamu"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:textColor="@color/hitam"
                android:fontFamily="@font/madee"
                />

            <ImageView
                android:layout_below="@id/tvvv"
                android:id="@+id/th1"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:background="@drawable/thumbnailsatu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:scaleType="fitStart">
            </ImageView>

            <ImageView
                android:layout_below="@id/th1"
                android:id="@+id/th2"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:background="@drawable/thumbnailtiga"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:scaleType="fitStart">
            </ImageView>

            <ImageView
                android:layout_below="@id/th2"
                android:id="@+id/th3"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:background="@drawable/thumbnaildua"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:scaleType="fitStart">
            </ImageView>

            <TextView
                android:id="@+id/tvv"
                android:layout_below="@id/th3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Media Sosial Perpustakaan UM Untuk Update Informasi"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:textColor="@color/hitam"
                android:fontFamily="@font/madee"
                />

            <RelativeLayout
                android:layout_below="@+id/tvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/btig"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ig"
                    />
                <Button
                    android:id="@+id/btfb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/fb"
                    />
                <Button
                    android:id="@+id/bttw"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/tw"
                    />

                <Button
                    android:id="@+id/btyt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="210dp"
                    android:background="@drawable/yt" />

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>