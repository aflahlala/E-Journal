<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarpanduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panduan Operasional Aplikasi"
        android:textSize="18sp"
        android:textColor="@color/putih"
        android:fontFamily="@font/futura"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        ></TextView>

    <Button
        android:id="@+id/btbackpanduan"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:background="@drawable/arrow"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"></Button>

    <ScrollView
        android:layout_below="@+id/toolbarpanduan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lgpanduan"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:src="@drawable/bukupanduan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:scaleType="centerInside"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"

                />

            <RelativeLayout
                android:layout_below="@+id/lgpanduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/btig2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ig"
                    />
                <Button
                    android:id="@+id/btfb2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/fb"
                    />
                <Button
                    android:id="@+id/bttw2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:background="@drawable/tw"
                    />

                <Button
                    android:id="@+id/btyt2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="210dp"
                    android:background="@drawable/yt" />

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>




</RelativeLayout>